---
import Layout from "~/components/layout/index.astro";
import Main from "~/components/main/index.astro";

const res = await fetch(
  `${import.meta.env.PUBLIC_URL}/wp-json/wp/v2/pages/1807`
);
const policy = await res.json();
---

<Layout title="Policy Page â€“ Twenty One Southend">
  <Main class="tw-container tw-text-[var(--color-text)]">
    <Fragment set:html={policy.content.rendered} />
  </Main>
</Layout>

<style>
  main :global(h1) {
    margin-block-start: 0.5rem;
    margin-block-end: 1rem;
    font-weight: 500;
    font-size: 2.5rem;
    line-height: 1.2;
  }

  main :global(h2) {
    margin-block-start: 0.5rem;
    margin-block-end: 1rem;
    font-weight: 500;
    font-size: 2rem;
    line-height: 1.2;
  }

  main :global(h3) {
    margin-block-start: 0.5rem;
    margin-block-end: 1rem;
    font-weight: 500;
    font-size: 1.75rem;
    line-height: 1.2;
  }

  main :global(h4) {
    margin-block-start: 0.5rem;
    margin-block-end: 1rem;
    font-weight: 500;
    font-size: 1.5rem;
    line-height: 1.2;
  }

  main :global(a) {
    color: var(--color-be88c48);
    text-decoration: underline;
  }

  main :global(strong) {
    font-weight: bolder;
  }

  main :global(ul) {
    list-style-position: inside;
    list-style-type: disc;
  }
</style>
